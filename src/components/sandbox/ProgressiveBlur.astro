  .unit::after {
    height: 12svh;
    z-index: 99;
    background: radial-gradient(
      ellipse at center bottom,
      transparent 0%,
      rgba(0, 0, 0, 0) 50%,
      rgba(0, 0, 0, 0.6) 80%,
      rgba(0, 0, 0, 1) 100%
    );
    filter: blur(8px);
  }
  .pb {
    width: 100%;
    height: 100svh;
    position: relative;
  }
  .pb_img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .pb_blur {
    display: flex;
    align-items: flex-end;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 35%;
    mask-image: linear-gradient(
      to bottom,
      rgb(0 0 0 / 0%) 0%,
      rgb(0 0 0 / 4.9%) 15.5%,
      rgb(0 0 0 / 10.4%) 22.5%,
      rgb(0 0 0 / 45%) 47.1%,
      rgb(0 0 0 / 55%) 52.9%,
      rgb(0 0 0 / 89.6%) 77.5%,
      rgb(0 0 0 / 95.1%) 91.9%,
      rgb(0 0 0 / 100%) 100%
    );
    mask-composite: intersect;
    backdrop-filter: blur(20px);
  }
  .pb-radial .pb_blur {
    mask-image: radial-gradient(
      ellipse at center top,
      transparent 0%,
      rgb(0 0 0 / 0%) 55%,
      rgb(0 0 0 / 4.9%) 60%,
      rgb(0 0 0 / 10.4%) 65%,
      rgb(0 0 0 / 45%) 70%,
      rgb(0 0 0 / 55%) 75%,
      rgb(0 0 0 / 89.6%) 80%,
      rgb(0 0 0 / 95.1%) 92%,
      rgb(0 0 0 / 100%) 100%
    );
  }
  .pb_text {
    color: #fff;
    display: flex;
    padding: 1rem;
    flex-direction: column;
    gap: 0rem;
    align-items: flex-start;
    justify-content: flex-end;
  }
  .pb_title {
    font-size: 20px;
  }
  .pb_caption {
    font-size: 10px;
    opacity: 0.8;
  }
</style>

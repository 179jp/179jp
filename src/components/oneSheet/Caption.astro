---
// props
const {
  font = "serif",
  size = "xs",
  color = "",
  position = "bottom-left",
  isBackground = false,
} = Astro.props;

const style = `color: ${color}`;
const positionClass = () => {
  switch (position) {
    case "bottom-left":
      return "bottom-left -g-4x5-pos-1-16 -g-end";
    case "bottom-center":
      return "bottom-center -g-4x5-pos-5-16 -g-end";
    case "bottom-right":
      return "bottom-right -g-4x5-pos-7-16 -g-end";
    case "top-center":
      return "top-center -g-4x5-pos-5-1 -g-end";
    case "top-left":
      return "top-left -g-4x5-pos-1-2 -g-end";
    case "top-center":
      return "top-center -g-4x5-pos-5-1 -g-end";
    case "top-right":
      return "top-right -g-4x5-pos-7-1 -g-end";
  }
};
const classList = `sheet-caption ${positionClass()}  -font-${font} -fs_${size} -text-justify ${isBackground ? 'background' : ''}`;
---

<div class={classList} style={style}>
  <p>
    <slot />
  </p>
</div>

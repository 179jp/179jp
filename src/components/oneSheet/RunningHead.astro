---
// props
const {
  font = "serif",
  size = "xs",
  color = "",
  rotate = 0,
  align = "center",
  position = "top-center",
} = Astro.props;

const style = `${color ? `color: ${color};` : ""} ${rotate ? `rotate: ${rotate}deg;` : ""}`;
const classList = `sheet-running-head -font-${font} -fs_${size} -text-${align} -ls-l ${position}`;
---

<p class={classList} style={style}>
  <slot />
</p>

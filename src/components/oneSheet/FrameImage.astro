---
// props
const {
  src = "",
  alt = "",
  width = 5,
  height = 5,
  column = 1,
  row = 1,
} = Astro.props;

import FloatGrid from "./FloatGrid.astro";

const classList = `sheet-frame-image -g-${width}x${height}-pos-${column}-${row}`;
---

<FloatGrid>
  <div class={classList}>
    <img src={src} alt={alt} class={`sheet-img`} loading="lazy" />
  </div>
</FloatGrid>